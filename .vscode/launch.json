{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "Debug Jest Tests",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "args": [
                "--config",
                "${workspaceFolder}/jest.config.ts",
                "--runInBand"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}